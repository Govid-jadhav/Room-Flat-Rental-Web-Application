<% layout('layout/boilerplate') %>

    <!-- Heading and Create Button -->
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center">
            <h3>All Listings</h3>
            <a href="/listings/new" class="btn btn-success">+ Create New Listing</a>
        </div>
    </div>

    <!-- Card Grid -->
    <div class="container mt-3">
        <div class="row">
            <% for (let listing of allListings) { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm border-0 position-relative">
                        <!-- Full Card Clickable -->
                        <a href="/listings/<%= listing._id %>" class="stretched-link"></a>

                        <!-- Image -->
                        <img src="<%= listing.image?.url || '/images/placeholder.jpg' %>" class="card-img-top"
                            alt="Listing image" style="height: 200px; object-fit: cover;">

                        <!-- Card Body -->
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                <%= listing.title %>
                            </h5>

                            <!-- Location -->
                            <p class="card-text text-muted">
                                <i class="bi bi-geo-alt-fill"></i>
                                <%= listing.location %>, <%= listing.country %>
                            </p>

                            <!-- Description -->
                            <p class="card-text mb-3">
                                <%= listing.description?.slice(0, 80) || 'No description available.' %>...
                            </p>

                            <!-- Price -->
                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <span class="badge bg-success fs-6">â‚¹ <%= listing.price %></span>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>