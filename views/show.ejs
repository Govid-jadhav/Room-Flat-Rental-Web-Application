<% layout('layout/boilerplate') %>

    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-md-8">

                <h3 class="fw-bold mb-4">Listing Details</h3>

                <% if (listing.image && listing.image.url) { %>
                    <img src="<%= listing.image.url %>" alt="Listing Image"
                        class="img-fluid w-100 rounded mb-4 shadow-sm" style="max-height: 500px; object-fit: cover;">
                    <% } else { %>
                        <img src="/images/placeholder.jpg" alt="No Image" class="img-fluid w-100 rounded mb-4 shadow-sm"
                            style="max-height: 500px; object-fit: cover;">
                        <% } %>

                            <!-- Listing Info -->
                            <ul class="list-group mb-4">
                                <li class="list-group-item"><strong>Title:</strong>
                                    <%= listing.title %>
                                </li>
                                <li class="list-group-item"><strong>Description:</strong>
                                    <%= listing.description %>
                                </li>
                                <li class="list-group-item"><strong>Price:</strong> â‚¹ <%=
                                        listing.price.toLocaleString("en-IN") %>
                                </li>
                                <li class="list-group-item"><strong>Location:</strong>
                                    <%= listing.location %>
                                </li>
                                <li class="list-group-item"><strong>Country:</strong>
                                    <%= listing.country %>
                                </li>
                            </ul>

                            <!-- Edit & Delete Actions -->
                            <div class="d-flex gap-3 mb-4">
                                <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning">Edit</a>
                                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                                    <button class="btn btn-danger"
                                        onclick="return confirm('Are you sure?');">Delete</button>
                                </form>
                            </div>

                            <!-- Leave Review Form -->
                            <div class="mb-5">
                                <h5 class="mb-3">Leave a Comment</h5>
                                <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate
                                    class="needs-validation">
                                    <div class="mb-3">
                                        <label for="rating" class="form-label">Rating</label>
                                        <input type="range" min="1" max="5" id="rating" name="review[rating]"
                                            class="form-range">
                                    </div>
                                    <div class="mb-3">
                                        <label for="comments" class="form-label">Comments</label>
                                        <textarea name="review[comment]" id="comments" class="form-control" rows="3"
                                            required></textarea>
                                        <div class="invalid-feedback">Please input something</div>
                                    </div>
                                    <button type="submit" class="btn btn-dark">Submit</button>
                                </form>
                            </div>

                            <div class="mt-4">
                                <h5 class="mb-3">All Reviews</h5>
                                <div class="row g-3">
                                    <% for (let review of listing.reviews) { %>
                                        <div class="col-12">
                                            <div class="d-flex border rounded shadow-sm p-3 bg-white align-items-start">

                                                <!-- Left: Person Icon -->
                                                <div class="me-3">
                                                    <i class="bi bi-person-circle fs-2 text-secondary"></i>
                                                </div>

                                                <!-- Right: Review Content -->
                                                <div class="flex-grow-1">
                                                    <p class="mb-1 text-muted small">
                                                        <i class="bi bi-chat-left-quote me-1"></i>
                                                        <%= review.comment %>
                                                    </p>

                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <span class="badge bg-dark">
                                                            <%= review.rating %>/5
                                                        </span>

                                                        <form method="POST"
                                                            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                                            class="mb-0">
                                                            <button class="btn btn-sm btn-outline-danger"
                                                                title="Delete">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <% } %>
                                </div>
                            </div>

            </div>


        </div>
    </div>
    </div>