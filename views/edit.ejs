<% layout('layout/boilerplate') %>

    <div class="container mt-5">
        <div class="row">
            <div class="col-12 col-md-8 offset-md-2">
                <h3>Edit Listing</h3>
                <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate
                    class="needs-validation" enctype="multipart/form-data">

                    <!-- Title -->
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input id="title" name="listing[title]" type="text" class="form-control"
                            value="<%= listing.title %>" required>
                        <div class="invalid-feedback">
                            Please Enter valid title
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea id="description" name="listing[description]" class="form-control" rows="3"
                            required><%= listing.description %></textarea>
                        <div class="invalid-feedback">
                            Description Should not be empty
                        </div>
                    </div>
                    <div class="mb-3">
                        Original image preview (blurred):
                        <br>
                        <img src="<%= blurredImageUrl %>" alt="Blurred preview" />
                    </div>

                    <!-- Image Upload -->
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload New Image</label>
                        <input id="image" name="image" type="file" accept="image/*" class="form-control">
                        <div class="form-text">If left blank, the current image will be retained.</div>
                    </div>


                    <!-- Price and Country Row -->
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input id="price" name="listing[price]" type="number" class="form-control"
                                value="<%= listing.price %>" required>
                            <div class="invalid-feedback">
                                You must enter price before submitting.
                            </div>
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input id="country" name="listing[country]" type="text" class="form-control"
                                value="<%= listing.country %>" required>
                            <div class="invalid-feedback">
                                Please select a valid country.
                            </div>
                        </div>
                    </div>

                    <!-- Location -->
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input id="location" name="listing[location]" type="text" class="form-control"
                            value="<%= listing.location %>" required>
                        <div class="invalid-feedback">
                            Please provide a valid city.
                        </div>
                    </div>

                    <!-- Submit -->
                    <!-- <div class="d-grid"> -->
                    <button type="submit" class="btn1 btn1-success ">Save</button>
            </div>
            <br> <br>
            </form>

        </div>
    </div>
    </div>